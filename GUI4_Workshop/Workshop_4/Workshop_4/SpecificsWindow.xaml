<Window x:Class="Workshop_4.SpecificsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Workshop_4"
        mc:Ignorable="d"
        Title="SpecificsWindow" Height="170" Width="319">
    <StackPanel x:Name="stack">
        <Label Content="Amount" Padding="10" Background="LightBlue" />
        <TextBox Text="{Binding Actual.Amount, UpdateSourceTrigger=Explicit}" Padding="10"/>
        <Label Content="{Binding Actual.Unit}" Padding="20" Background="LightBlue" />
        <Button Content="Save" Padding="10" Click="Button_Click"  />
    </StackPanel>
</Window>
